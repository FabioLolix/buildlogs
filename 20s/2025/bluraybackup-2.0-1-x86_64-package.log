# bin
mkdir -p /build/bluraybackup/pkg/bluraybackup/usr/bin
cp -f bluraybackup /build/bluraybackup/pkg/bluraybackup/usr/bin
chmod 755 /build/bluraybackup/pkg/bluraybackup/usr/bin/bluraybackup
# doc
mkdir -p /build/bluraybackup/pkg/bluraybackup/usr/share/doc/bluraybackup
cp -f README /build/bluraybackup/pkg/bluraybackup/usr/share/doc/bluraybackup
chmod 644 /build/bluraybackup/pkg/bluraybackup/usr/share/doc/bluraybackup/README
# man page
mkdir -p /build/bluraybackup/pkg/bluraybackup/usr/share/man/man1
sed 's/VERSION/2.0/' < bluraybackup.1 > /build/bluraybackup/pkg/bluraybackup/usr/share/man/man1/bluraybackup.1
chmod 644 /build/bluraybackup/pkg/bluraybackup/usr/share/man/man1/bluraybackup.1
